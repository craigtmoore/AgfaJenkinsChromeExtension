{
  "manifest_version": 2,
  "name": "Agfa Jenkins Breadcrumb",
  "version": "1.0.1",
  "description": "An extension for the Agfa Jenkins server, which copies the page URL into your clipboard as a break crumb style address",
  "homepage_url": "https://github.com/craigtmoore/AgfaJenkinsChromeExtension",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://ei-ci.agfahealthcare.com/jenkins/*",
        "*://jenkins01-iibu.agfahealthcare.com/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "commands": {
    "copy-jira": {
      "suggested_key": {
        "default": "Alt+J"
      },
      "description": "Copy URL Jira format"
    },
    "copy-markdown": {
      "suggested_key": {
        "default": "Alt+M"
      },
      "description": "Copy URL in markdown Format "
    },
    "copy-html": {
      "suggested_key": {
        "default": "Alt+H"
      },
      "description": "Copy URL in HTML format"
    }
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "declarativeContent"
  ]
}